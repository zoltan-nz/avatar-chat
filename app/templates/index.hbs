<div class="row">

  {{#each model as |item|}}
    <div class="col-sm-3">
      <div class="panel panel-default text-center">
        <div class="panel-heading">{{item.name}}</div>
        <div class="panel-body">
          <img src="{{item.url}}" width="100" height="100" class="img-circle">
          {{#link-to 'avatar.all' item.id}}Select{{/link-to}}
        </div>
      </div>
    </div>
  {{/each}}

</div>

<div class="well">
  <div class="row">


    <div class="col-sm-8">

      <form class="form-inline">

        {{input value=name placeholder='name' class="form-control"}}
        {{input value=url placeholder='url' class="form-control"}}
        <button type="submit" class="btn btn-success" {{action 'addNewAvatar' name url}}>Add</button>


      </form>
    </div>

    <div class="col-sm-4">

      <div class="panel panel-default text-center">
        <div class="panel-heading">{{name}}</div>
        <div class="panel-body">
          <img src="{{url}}" width="100" height="100" class="img-circle">
        </div>
      </div>

    </div>

  </div>

</div>